<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootLayout"
    android:paddingBottom="@dimen/huge_margin"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ids.qasemti.custom.CustomTextViewBold
        android:layout_marginTop="@dimen/medium_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:gravity="center"
        android:tag="langSetting"
        android:text="@string/langSetting"
        android:textSize="@dimen/header_font"/>


    <LinearLayout
        android:layout_margin="@dimen/margin_start_end"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_icon"
        >

        <LinearLayout
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:gravity="center"
                android:id="@+id/tvEnglish"
                android:background="@drawable/rounded_red_background"
                android:layout_width="@dimen/logo_size_top_hight"
                android:layout_height="@dimen/button_height"
                android:tag="btn_english"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_font"
                android:text="@string/btn_english"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:gravity="center"
                android:id="@+id/tvArabic"
                android:background="@drawable/rounded_white_red_border"
                android:layout_width="@dimen/logo_size_top_hight"
                android:layout_height="@dimen/button_height"
                android:tag="btn_arabic"
                android:textColor="@color/gray_font_title"
                android:textSize="@dimen/normal_font"
                android:text="@string/btn_arabic"/>

        </LinearLayout>

    </LinearLayout>


