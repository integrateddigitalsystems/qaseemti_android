<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">


     <androidx.cardview.widget.CardView
        android:id="@+id/cvCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/normal_margin"
        android:elevation="@dimen/normal_margin"
        android:layout_marginTop="@dimen/push_card"
        card_view:contentPadding="0dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/bigger_radius"
        android:background="@drawable/rounded_white_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_start_end"
        android:paddingEnd="@dimen/margin_start_end">

    <LinearLayout
        android:paddingTop="@dimen/big_margin"
        android:paddingStart="@dimen/margin_start_end"
        android:paddingEnd="@dimen/margin_start_end"
        android:paddingBottom="@dimen/big_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="@dimen/normal_radius"
            android:layout_width="@dimen/big_icon"
            android:visibility="gone"
            android:layout_height="@dimen/big_icon">
            <ImageView
                android:id="@+id/ivCartIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sample_pink"/>
        </androidx.cardview.widget.CardView>



        <LinearLayout

            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ids.qasemti.custom.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:id="@+id/tvCartId"

                    android:textColor="@color/gray_font_title"
                    android:textSize="@dimen/small_font"/>

                <com.ids.qasemti.custom.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textColor="@color/gray_font_title"
                    android:textSize="@dimen/small_font"
                    android:text=" - "/>

            <com.ids.qasemti.custom.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:id="@+id/tvCartTitle"
                android:textColor="@color/gray_font_title"
                android:textSize="@dimen/small_font"
                android:text="Water Tank"/>

            </LinearLayout>

            <com.ids.qasemti.custom.CustomTextViewBold
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvItemCost"
                android:textAlignment="viewStart"
                android:textColor="@color/primary"
                android:textSize="@dimen/small_font"
                android:text="10"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/ivDeleteItem"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/normal_icon_size"
            android:tint="@color/new_black"
            android:layout_height="@dimen/normal_icon_size"
            android:src="@drawable/icon_file_trash"/>

    </LinearLayout>

     </androidx.cardview.widget.CardView>








</LinearLayout>