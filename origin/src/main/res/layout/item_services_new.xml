<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_white_background"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/pink_background_circle"
        android:layout_marginTop="@dimen/first_margin"
        android:layout_marginBottom="@dimen/first_margin"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView

            android:id="@+id/ivServiceLogo"
            android:layout_width="@dimen/big_icon_size"
            android:layout_height="@dimen/big_icon_size"
            android:src="@drawable/icon_box_product" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical">
        <com.ids.qasemti.custom.CustomTextViewBold
            android:layout_width="wrap_content"
            android:id="@+id/tvServiceTitle"
            android:maxLines="1"
            android:layout_marginStart="@dimen/normal_margin"
            android:text="Gravel Truck"
            android:textSize="@dimen/normal_font"
            android:textColor="@color/gray_font_title"
            android:layout_height="wrap_content"/>

        <com.ids.qasemti.custom.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:id="@+id/tvQty"
            android:maxLines="1"
            android:layout_marginStart="@dimen/normal_margin"
            android:text="Gravel Truck"
            android:textSize="@dimen/small_font"
            android:textColor="@color/gray_font_light"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_font_light"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ids.qasemti.custom.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_margin"
                android:maxLines="1"
                android:tag="price"
                android:text="@string/price"
                android:textColor="@color/gray_font_title"
                android:textSize="@dimen/normal_font" />

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_margin"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="10 KWD"
                android:textColor="@color/redPrimary"
                android:textSize="@dimen/normal_font" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ids.qasemti.custom.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_margin"
                android:maxLines="1"
                android:tag="earning"
                android:text="@string/earning"
                android:textColor="@color/gray_font_title"
                android:textSize="@dimen/normal_font" />

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_margin"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="7 KWD"
                android:textColor="@color/redPrimary"
                android:textSize="@dimen/normal_font" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="start"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_right"
            app:tint="@color/button_blue" />
    </LinearLayout>

    </LinearLayout>

</LinearLayout>