<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/mini_margin"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/linearProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llHomeCurve"
        app:cardUseCompatPadding="true"
        android:background="@drawable/rounded_white_background"
        android:elevation="@dimen/normal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/big_margin"
        android:paddingEnd="@dimen/big_margin"
        app:cardCornerRadius="@dimen/normal_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_start_end"
                android:paddingTop="@dimen/mini_margin"
                android:paddingEnd="@dimen/margin_start_end">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pink_background_circle">

                    <ImageView
                        android:layout_width="@dimen/normal_icon_size"
                        android:layout_height="@dimen/normal_icon_size"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_box_product" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    android:weightSum="1">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tvCategoryOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:text="Sami Suleiman"
                        android:textColor="@color/gray_font_title"
                        android:textSize="@dimen/normal_font" />

                    <com.ids.qasemti.custom.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="top"
                        android:text="#000777"
                        android:textColor="@color/gray_font"
                        android:textSize="@dimen/small_font" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPhoneChat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/ivOrderCall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="@dimen/mini_margin"
                            android:src="@drawable/icon_phone"
                            app:tint="@color/redPrimary" />

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="@dimen/icon_2"
                            android:layout_marginStart="@dimen/normal_margin"
                            android:layout_marginEnd="@dimen/normal_margin"
                            android:background="@color/gray_line" />

                        <ImageView
                            android:id="@+id/ivOrderMessage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/icon_chat" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCancelOrderDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/small_icon"
                        android:layout_height="@dimen/small_icon"
                        android:layout_gravity="top"
                        android:layout_marginTop="@dimen/mini_margin"
                        android:src="@drawable/wall_clock"
                        app:tint="@color/redPrimary"

                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_margin"

                        android:orientation="vertical">


                        <com.ids.qasemti.custom.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_date"
                            android:textColor="@color/gray_font_title"
                            android:textSize="@dimen/normal_font" />

                        <com.ids.qasemti.custom.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 Jun,2021 16:00"
                            android:textColor="@color/gray_font"
                            android:textSize="@dimen/small_font_3" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <include layout="@layout/separator" />

            <LinearLayout
                android:id="@+id/llDates"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_start_end"
                android:paddingEnd="@dimen/margin_start_end">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/small_icon"
                        android:layout_height="@dimen/small_icon"
                        android:layout_gravity="top"
                        android:layout_marginTop="@dimen/mini_margin"
                        android:src="@drawable/wall_clock"
                        app:tint="@color/redPrimary"

                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_margin"

                        android:orientation="vertical">


                        <com.ids.qasemti.custom.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_date"
                            android:textColor="@color/gray_font_title"
                            android:textSize="@dimen/normal_font" />

                        <com.ids.qasemti.custom.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 Jun,2021 16:00"
                            android:textColor="@color/gray_font"
                            android:textSize="@dimen/small_font_3" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/small_icon"
                        android:layout_height="@dimen/small_icon"
                        android:layout_gravity="top"
                        android:layout_marginTop="@dimen/mini_margin"
                        android:src="@drawable/wall_clock"
                        app:tint="@color/redPrimary"

                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_margin"

                        android:orientation="vertical">


                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tvDateExpected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/expected_delivery"
                            android:textColor="@color/gray_font_title"
                            android:textSize="@dimen/normal_font"
                            android:textStyle="bold" />

                        <com.ids.qasemti.custom.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 Jun,2021 16:00"
                            android:textColor="@color/gray_font"
                            android:textSize="@dimen/small_font_3" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llCancelReason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_start_end"
                android:paddingEnd="@dimen/margin_start_end"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/normal_icon"
                        android:layout_height="@dimen/normal_icon"
                        android:src="@drawable/icon_close"
                        app:tint="@color/redPrimary" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:orientation="vertical">

                        <com.ids.qasemti.custom.CustomTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="cancellation_reason"
                            android:text="@string/cancellation_reason"
                            android:textColor="@color/gray_font_title" />

                        <com.ids.qasemti.custom.CustomTextViewMedium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="lorem ipsum dolor lorem ipsum lorem ipsum lorem ipsum lorem ipsum."
                            android:textColor="@color/gray_font_light"
                            android:textSize="@dimen/small_font_2" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCancelBorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <include layout="@layout/separator" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llPersonCancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_start_end"
                android:paddingEnd="@dimen/margin_start_end"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/normal_icon"
                    android:layout_height="@dimen/normal_icon"
                    android:src="@drawable/icon_user"
                    app:tint="@color/redPrimary" />

                <com.ids.qasemti.custom.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:tag="cancelled_by"
                    android:text="@string/CanceledBy"
                    android:textColor="@color/gray_font_title" />

                <com.ids.qasemti.custom.CustomTextViewMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Smith"
                    android:textColor="@color/gray_font_light"
                    android:textSize="@dimen/small_font_2" />


            </LinearLayout>


            <include layout="@layout/separator" />

            <LinearLayout
                android:id="@+id/llLocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_start_end"
                android:paddingEnd="@dimen/margin_start_end">

                <ImageView
                    android:layout_width="@dimen/normal_icon"
                    android:layout_height="@dimen/normal_icon"
                    android:src="@drawable/placeholder"
                    app:tint="@color/redPrimary" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:orientation="vertical">

                    <com.ids.qasemti.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dumy_text_underline"

                        android:textColor="@color/primary"
                        android:textSize="@dimen/normal_font"

                        />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/redPrimary" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSepActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/separator" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llRatings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_start_end"
                android:paddingEnd="@dimen/margin_start_end"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/normal_icon"
                    android:layout_height="@dimen/normal_icon"
                    android:src="@drawable/icon_star"
                    app:tint="@color/redPrimary" />


                <com.ids.qasemti.custom.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:tag="rate"
                    android:text="@string/rate"
                    android:textColor="@color/gray_font_title"
                    android:textSize="@dimen/normal_font" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/huge_margin"
                    android:gravity="start">

                    <androidx.appcompat.widget.AppCompatRatingBar
                        style="?attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:progressTint="@color/button_blue"
                        android:stepSize="1" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llCredit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_start_end"
                android:paddingEnd="@dimen/margin_start_end"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/normal_icon"
                    android:layout_height="@dimen/normal_icon"
                    android:src="@drawable/icon_credit" />


                <com.ids.qasemti.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:tag="pending_cash_on_delivery"
                    android:text="@string/pending_cash_delivery"
                    android:textColor="@color/gray_font_light"
                    android:textSize="@dimen/normal_font" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSwitches"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/mini_margin"
                android:paddingEnd="@dimen/mini_margin"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.ids.qasemti.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="on_track"
                        android:text="@string/OnTrack" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:theme="@style/Theme.MyTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.ids.qasemti.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="delivered"
                        android:text="@string/Delivery"
                        android:textSize="@dimen/small_font" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:theme="@style/Theme.MyTheme" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <com.ids.qasemti.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="paid"
                        android:text="@string/Paid" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:theme="@style/Theme.MyTheme" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSeperatorUpcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/separator" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/normal_radius"
                android:paddingEnd="@dimen/margin_start_end">


                <com.ids.qasemti.custom.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:paddingEnd="@dimen/small_margin"
                    android:tag="rate"
                    android:text="$"
                    android:textColor="@color/redPrimary"
                    android:textSize="@dimen/normal_font" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:gravity="start">

                    <com.ids.qasemti.custom.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="order_amount"
                        android:text="@string/OrderAmount"
                        android:textColor="@color/gray_font_title"
                        android:textSize="@dimen/normal_font" />

                    <com.ids.qasemti.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:text="10 KWD"
                        android:textColor="@color/redPrimary"
                        android:textSize="@dimen/normal_font" />
                </LinearLayout>


            </LinearLayout>

            <include layout="@layout/separator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_start_end"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/llViewOrderDetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/small_icon"
                        android:layout_height="@dimen/small_icon"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/view"
                        app:tint="@color/button_blue" />

                    <com.ids.qasemti.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:gravity="center_vertical"
                        android:text="@string/view_order_details"
                        android:textColor="@color/button_blue"
                        android:textSize="@dimen/normal_font" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBorderCan"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/icon_2"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:background="@color/gray_line"
                    android:orientation="vertical"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llTrackOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/small_icon"
                        android:layout_height="@dimen/small_icon"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_track_order"
                        app:tint="@color/redPrimary" />

                    <com.ids.qasemti.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:gravity="center_vertical"
                        android:tag="track_order_C"
                        android:text="@string/track_order_C"
                        android:textColor="@color/redPrimary"
                        android:textSize="@dimen/normal_font" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
