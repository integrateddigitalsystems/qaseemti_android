<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/first_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_background"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llNotificationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ids.qasemti.custom.CustomTextViewBold
                android:id="@+id/tvNotificationTitle"
                android:layout_width="0dp"
                android:layout_height="@dimen/tab_rounded_size"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_weight="1"
                android:textColor="@color/gray_font_title"
                android:gravity="center_vertical"
                android:text="Notification 1" />

            <ImageView
                android:id="@+id/ivArrowNotf"
                android:layout_width="@dimen/icon_2"
                android:layout_height="@dimen/icon_2"
                android:layout_marginEnd="@dimen/normal_margin"
                android:rotation="90"
                android:src="@drawable/arrow_right"
                app:tint="@color/gray_font_title" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llNotificationMore"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_margin="@dimen/normal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_font"
                android:id="@+id/tvNotificationDetails"/>

        <ImageView
            android:id="@+id/ivNotificationImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/logo_height"
            android:layout_margin="@dimen/normal_margin"
            android:scaleType="centerCrop"
            />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>