<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/linearProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:background="@drawable/rounded_white_background"
        android:elevation="@dimen/normal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/big_margin"
        android:paddingEnd="@dimen/big_margin"
        app:cardCornerRadius="@dimen/normal_radius">
    <RelativeLayout
        android:background="@drawable/rounded_white_background"
        android:id="@+id/llCurrentLocation"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="@dimen/first_margin"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"


        android:elevation="@dimen/small_margin"
        android:orientation="vertical"
        >

        <LinearLayout
            android:paddingStart="@dimen/big_margin"
            android:paddingEnd="@dimen/big_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pink_background_circle"
                android:padding="@dimen/normal_margin">

                <ImageView
                    android:tint="@color/redPrimary"
                    android:id="@+id/ivCurrent"
                    android:layout_width="@dimen/bigger_edit_text"
                    android:layout_height="@dimen/bigger_edit_text"
                    android:src="@drawable/footer_orders" />
            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:layout_marginStart="@dimen/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/normal_icon"
                        android:layout_height="@dimen/normal_icon"
                        android:src="@drawable/icon_dollar"
                        android:tint="@color/redPrimary" />

                    <com.ids.qasemti.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:text="10 KWD" />


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/normal_icon"
                        android:layout_height="@dimen/normal_icon"
                        android:src="@drawable/icon_hashtag"
                        android:tint="@color/redPrimary" />

                    <com.ids.qasemti.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:text="07070220" />


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/normal_icon"
                        android:layout_height="@dimen/normal_icon"
                        android:src="@drawable/icon_pin_blue"
                        android:tint="@color/redPrimary" />

                    <LinearLayout
                        android:layout_marginStart="@dimen/normal_margin"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.ids.qasemti.custom.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dumy_text_underline"

                            android:textColor="@color/primary"
                            android:textSize="@dimen/normal_font"

                            />
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/redPrimary"/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/first_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_serperator"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llCall"
                android:layout_marginTop="@dimen/mini_margin"
                android:layout_marginBottom="@dimen/mini_margin"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="@dimen/mini_margin"
                    android:src="@drawable/icon_phone"
                    android:tint="@color/redPrimary"
                    android:layout_width="@dimen/icon_2"
                    android:layout_height="@dimen/icon_2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_line"/>

            <LinearLayout
                android:id="@+id/llMessage"
                android:layout_marginTop="@dimen/mini_margin"
                android:layout_marginBottom="@dimen/mini_margin"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/icon_chat"
                    android:layout_width="@dimen/normal_icon_size"
                    android:layout_height="@dimen/normal_icon_size"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llRatingOrder"
            android:padding="@dimen/mini_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/half_rounded_blue">

            <ImageView
                android:tint="@color/white"
                android:layout_width="@dimen/normal_icon"
                android:layout_height="@dimen/normal_icon"
                android:src="@drawable/icon_star"/>

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mini_margin"
                android:layout_marginEnd="@dimen/mini_margin"
                android:textSize="@dimen/small_font_2"
                android:textColor="@color/white"
                android:text="@string/rate_us"/>

        </LinearLayout>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>