<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/linearService"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/push_card"
        android:id="@+id/cvServicess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/normal_margin"
        android:elevation="@dimen/normal_margin"
        card_view:contentPadding="0dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/bigger_radius"
        android:background="@drawable/rounded_white_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <LinearLayout

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/big_margin"
        android:paddingEnd="@dimen/mini_margin"
        android:layout_height="90dp"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:background="@drawable/pink_background_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/big_icon_size"
                android:layout_height="@dimen/big_icon_size"
                android:tint="@color/primary"
                android:id="@+id/ivServiceLogo"
                android:src="@drawable/icon_box_product"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <com.ids.qasemti.custom.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:id="@+id/tvServiceTitle"
                    android:maxLines="3"
                    android:layout_marginStart="@dimen/big_margin"
                    android:text=""
                    android:textSize="@dimen/normal_font"
                    android:textColor="@color/gray_font_title"
                    android:layout_height="wrap_content"/>

                <com.ids.qasemti.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:id="@+id/tvQty"
                    android:maxLines="2"
                    android:layout_marginStart="@dimen/big_margin"
                    android:text=""
                    android:textSize="@dimen/small_font"
                    android:textColor="@color/gray_font_title"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_font_light"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="@dimen/small_margin"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <com.ids.qasemti.custom.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:text="@string/Price"
                        android:tag="price"
                        android:textSize="@dimen/normal_font"
                        android:textColor="@color/gray_font_title"
                        android:layout_height="wrap_content"/>

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="match_parent"
                        android:gravity="end"
                        android:id="@+id/tvPriceQt"
                        android:maxLines="1"
                        android:layout_marginEnd="@dimen/normal_margin"
                        android:text=""
                        android:textSize="@dimen/normal_font"
                        android:textColor="@color/primary"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <com.ids.qasemti.custom.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:text="@string/Earning"
                        android:tag="earning"
                        android:textSize="@dimen/normal_font"
                        android:textColor="@color/gray_font_title"
                        android:layout_height="wrap_content"/>
                    <me.grantland.widget.AutofitTextView
                        android:layout_width="match_parent"
                        android:layout_gravity="end"
                        android:maxLines="1"
                        android:layout_marginEnd="@dimen/normal_margin"
                        android:text=""
                        android:gravity="end"
                        android:id="@+id/tvEarnQt"
                        android:textSize="@dimen/small_font_2"
                        android:textColor="@color/primary"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"

                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_right"
                android:tint="@color/new_black" />

        </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>