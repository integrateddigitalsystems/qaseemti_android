<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.ids.qasemti.custom.CustomTextViewBold
            android:paddingStart="@dimen/first_margin"
            android:paddingEnd="@dimen/first_margin"
            android:textColor="@color/gray_font_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/tvTitleOther"
            android:layout_weight="1"
            android:tag="additional_fees_due"
            android:text="@string/AdditionalFees" />

        <LinearLayout
            android:layout_width="@dimen/stroke"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <com.ids.qasemti.custom.CustomTextViewMedium
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="@dimen/first_margin"
            android:id="@+id/tvOtherValue"
            android:gravity="center"
            android:text="2 KWD"
            android:textColor="@color/redPrimary" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke"
        android:background="@color/white" />

</LinearLayout>