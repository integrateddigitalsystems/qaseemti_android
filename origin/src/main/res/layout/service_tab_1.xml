<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearService1"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.ids.qasemti.custom.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_information"
        android:textColor="@color/primary"
        android:textSize="@dimen/big_font"
        android:tag="service_information"
        />


    <com.ids.qasemti.custom.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_font"
        android:textColor="@color/gray_font_title"
        android:text="@string/description"
        android:layout_marginTop="@dimen/normal_margin"
        android:tag="description"
        />

    <com.ids.qasemti.custom.CustomTextViewMedium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_font"
        android:textColor="@color/gray_font"
        android:layout_marginTop="@dimen/normal_margin"
        android:text="lorem ipsum is simply dummy text of the printing lorem ipsum is simply dummy text of the printing"
        android:tag="description"
        />

    <com.ids.qasemti.custom.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_font"
        android:layout_marginTop="@dimen/medium_margin"
        android:textColor="@color/gray_font_title"
        android:text="@string/type"
        android:tag="type"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:background="@drawable/rounded_white_background">

        <Spinner
            android:id="@+id/spType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_35"
            android:background="@color/transparent"
            />

        <ImageView
            android:layout_marginEnd="@dimen/first_margin"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/small_icon"
            android:layout_height="@dimen/small_icon"
            android:src="@drawable/arrow_right"
            android:rotation="90"
            app:tint="@color/gray_font_title"/>

    </RelativeLayout>


    <com.ids.qasemti.custom.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_font"
        android:layout_marginTop="@dimen/medium_margin"
        android:textColor="@color/gray_font_title"
        android:text="@string/size_capacity"
        android:tag="size_capacity"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:background="@drawable/rounded_white_background">

        <Spinner
            android:id="@+id/spSize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_35"
            android:background="@color/transparent"
            />

        <ImageView
            android:layout_marginEnd="@dimen/first_margin"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/small_icon"
            android:layout_height="@dimen/small_icon"
            android:src="@drawable/arrow_right"
            android:rotation="90"
            app:tint="@color/gray_font_title"/>

    </RelativeLayout>

    <com.ids.qasemti.custom.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_font"
        android:layout_marginTop="@dimen/medium_margin"
        android:textColor="@color/gray_font_title"
        android:text="@string/stock_available"
        android:tag="stock_available"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:background="@drawable/rounded_white_background">

        <Spinner
            android:id="@+id/spStock"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_35"
            android:background="@color/transparent"
            />

        <ImageView
            android:layout_marginEnd="@dimen/first_margin"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/small_icon"
            android:layout_height="@dimen/small_icon"
            android:src="@drawable/arrow_right"
            android:rotation="90"
            app:tint="@color/gray_font_title"/>

    </RelativeLayout>


    <com.ids.qasemti.custom.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_font"
        android:textColor="@color/gray_font_title"
        android:text="@string/description"
        android:layout_marginTop="@dimen/medium_margin"
        android:tag="description"
        />

    <com.ids.qasemti.custom.CustomTextViewMedium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_font"
        android:textColor="@color/gray_font"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/for_the_service"
        android:tag="for_the_service"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/normal_margin"
        >

        <Button
            android:layout_width="180dp"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/rounded_white_red_border"
            android:text="@string/choose_file"
            android:tag="@string/choose_file"
            android:textSize="@dimen/small_font"
            android:textColor="@color/gray_font"
            android:textAllCaps="false"
            />

        <com.ids.qasemti.custom.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/small_margin"
            android:paddingEnd="@dimen/small_margin"
            android:text="@string/no_file_chosen"
            android:tag="no_file_chosen"
            android:textSize="@dimen/small_font"
            />

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/blue_rounded"
        android:textSize="@dimen/normal_font"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/normal_margin"
        android:text="@string/save"
        android:tag="save"
        android:textAllCaps="false"
        />


</LinearLayout>