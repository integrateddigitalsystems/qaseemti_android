<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/push_card"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSettlements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/normal_margin"
        android:elevation="@dimen/normal_margin"
        card_view:contentPadding="0dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/bigger_radius"
        android:background="@drawable/rounded_white_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settlement_inside_item_hight"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_start_end"
            android:paddingEnd="@dimen/margin_start_end">

            <ImageView
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:src="@drawable/icon_hashtag"
                android:tint="@color/primary" />

            <com.ids.qasemti.custom.CustomTextViewBold
                android:id="@+id/tvIdSettlementTitle"

                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settlement_request_number"
                android:textSize="@dimen/normal_font"
                android:tag="settlement_request_number"
                android:textColor="@color/gray_font_title" />

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:id="@+id/tvSettlementId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123654"
                android:layout_marginEnd="@dimen/big_margin"
                android:textColor="@color/primary"
                android:textSize="@dimen/small_font" />


        </LinearLayout>
        <include layout="@layout/separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settlement_inside_item_hight"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_start_end"
            android:paddingEnd="@dimen/margin_start_end">

            <ImageView
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:src="@drawable/wall_clock"
                android:tint="@color/primary" />

            <com.ids.qasemti.custom.CustomTextViewBold
                android:layout_marginStart="@dimen/normal_margin"
                android:id="@+id/tvDateTitle"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_date"
                android:textSize="@dimen/normal_font"
                android:tag="order_date"
                android:textColor="@color/gray_font_title" />

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 Jun 2021 16:00"
                android:id="@+id/tvOrderDateSett"
                android:textColor="@color/gray_font_title"
                android:textSize="@dimen/small_font" />


        </LinearLayout>
        <include layout="@layout/separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settlement_inside_item_hight"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_start_end"
            android:paddingEnd="@dimen/margin_start_end">

            <ImageView
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:src="@drawable/icon_dollar"
                android:tint="@color/primary" />

            <com.ids.qasemti.custom.CustomTextViewBold
                android:id="@+id/tvAmountTitle"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/OrderAmount"
                android:tag="OrderAmount"
                android:textColor="@color/gray_font_title" />

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 KWD"
                android:id="@+id/tvSettAmount"
                android:textColor="@color/primary"
                android:textSize="@dimen/normal_font" />


        </LinearLayout>
        <include layout="@layout/separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settlement_inside_item_hight"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_start_end"
            android:paddingEnd="@dimen/margin_start_end">

            <ImageView
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:src="@drawable/icon_myearning"
                android:tint="@color/primary" />

            <com.ids.qasemti.custom.CustomTextViewBold
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:id="@+id/tvEarningsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MyEarning"
                android:tag="MyEarning"
                android:textColor="@color/gray_font_title" />

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 KWD"
                android:id="@+id/tvEarnSett"
                android:textColor="@color/primary"
                android:textSize="@dimen/normal_font" />


        </LinearLayout>
        <include layout="@layout/separator" />

        <LinearLayout
            android:id="@+id/llMyDues"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settlement_inside_item_hight"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_start_end"
            android:paddingEnd="@dimen/margin_start_end">

            <ImageView
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:src="@drawable/icon_mydues"
                android:tint="@color/primary" />

            <com.ids.qasemti.custom.CustomTextViewBold
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MyDues"
                android:tag="MyDues"
                android:textColor="@color/gray_font_title" />

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 KWD"
                android:id="@+id/tvSettDues"
                android:textColor="@color/primary"
                android:textSize="@dimen/normal_font" />


        </LinearLayout>
        <include layout="@layout/separator" />




        <LinearLayout
            android:background="@drawable/rounded_end_button_primary"
            android:id="@+id/llViewOrderDetails"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settlement_inside_item_hight"
            android:gravity="center"
            android:orientation="horizontal"

            android:paddingStart="@dimen/margin_start_end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/small_icon"
                    android:layout_height="@dimen/small_icon"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/view"
                    android:tint="@color/white" />

                <com.ids.qasemti.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvViewDetails"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:text="@string/view_order_details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_font" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>