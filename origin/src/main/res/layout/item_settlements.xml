<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/normal_margin"
    android:orientation="vertical"
    android:padding="@dimen/mini_margin"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/linearProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:background="@drawable/rounded_white_background"
        android:elevation="@dimen/normal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/big_margin"
        android:paddingEnd="@dimen/big_margin"
        app:cardCornerRadius="@dimen/normal_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settlement_inside_item_hight"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_start_end"
            android:paddingEnd="@dimen/margin_start_end">





            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="# 0707072020"
                android:maxLines="1"
                android:textColor="@color/redPrimary"
                android:id="@+id/tvSettlementId"
                android:textSize="@dimen/normal_font" />


        </LinearLayout>
        <include layout="@layout/separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settlement_inside_item_hight"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_start_end"
            android:paddingEnd="@dimen/margin_start_end">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:src="@drawable/wall_clock"
                app:tint="@color/redPrimary" />

            <com.ids.qasemti.custom.CustomTextViewBold
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_date"
                android:textSize="@dimen/normal_font"
                android:tag="order_date"
                android:textColor="@color/gray_font_title" />

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 Jun 2021 16:00"
                android:textColor="@color/gray_font_light"
                android:textSize="@dimen/small_font" />


        </LinearLayout>
        <include layout="@layout/separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settlement_inside_item_hight"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_start_end"
            android:paddingEnd="@dimen/margin_start_end">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:src="@drawable/icon_dollar"
                app:tint="@color/redPrimary" />

            <com.ids.qasemti.custom.CustomTextViewBold
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/OrderAmount"
                android:tag="order_amount"
                android:textColor="@color/gray_font_title" />

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 KWD"
                android:textColor="@color/redPrimary"
                android:textSize="@dimen/normal_font" />


        </LinearLayout>
        <include layout="@layout/separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settlement_inside_item_hight"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_start_end"
            android:paddingEnd="@dimen/margin_start_end">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:src="@drawable/ic_settlement"
                app:tint="@color/redPrimary" />

            <com.ids.qasemti.custom.CustomTextViewBold
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_earning"
                android:tag="my_earning"
                android:textColor="@color/gray_font_title" />

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 KWD"
                android:textColor="@color/redPrimary"
                android:textSize="@dimen/normal_font" />


        </LinearLayout>
        <include layout="@layout/separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settlement_inside_item_hight"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_start_end"
            android:paddingEnd="@dimen/margin_start_end">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:src="@drawable/ic_settlement"
                app:tint="@color/redPrimary" />

            <com.ids.qasemti.custom.CustomTextViewBold
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_dues"
                android:tag="my_dues"
                android:textColor="@color/gray_font_title" />

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 KWD"
                android:textColor="@color/redPrimary"
                android:textSize="@dimen/normal_font" />


        </LinearLayout>
        <include layout="@layout/separator" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settlement_inside_item_hight"
            android:gravity="center"
            android:orientation="horizontal"

            android:paddingStart="@dimen/margin_start_end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/small_icon"
                    android:layout_height="@dimen/small_icon"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/view"
                    app:tint="@color/button_blue" />

                <com.ids.qasemti.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:gravity="center_vertical"
                    android:text="@string/view_order_details"
                    android:textColor="@color/button_blue"
                    android:textSize="@dimen/normal_font" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>