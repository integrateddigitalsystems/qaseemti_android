<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    >




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="@dimen/footer_height">
    <LinearLayout
        android:background="@color/white"
        android:visibility="visible"
        android:id="@+id/llFooterCart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/ivCartFooter"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"
            android:src="@drawable/footer_new_cart"
            android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.ids.qasemti.custom.CustomTextViewMedium
                    android:visibility="gone"
                    android:id="@+id/tvNumberCartOrders"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/primary_circle"/>
            </LinearLayout>



        </FrameLayout>

        <com.ids.qasemti.custom.CustomTextViewMedium
            android:id="@+id/tvCartFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font"
            android:text="@string/Cart"
            android:textColor="@color/gray_font"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_gravity="center"
            android:tag="Cart"
            />




    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/llFooterProducts"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivProductFooter"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"
            android:src="@drawable/footer_new_services"
            android:layout_gravity="center"/>

        <com.ids.qasemti.custom.CustomTextViewMedium
            android:id="@+id/tvProductFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font_3"
            android:text="@string/MyServices"
            android:textColor="@color/gray_font"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_gravity="center"
            android:tag="MyServices"
            />

    </LinearLayout>



    <LinearLayout
        android:background="@color/white"
        android:id="@+id/llFooterOrders"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivFooterOrder"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"
            android:src="@drawable/footer_new_orders"
            android:layout_gravity="center"/>

        <com.ids.qasemti.custom.CustomTextViewMedium
            android:id="@+id/tvFooterOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font_3"
            android:text="@string/Orders"
            android:textColor="@color/gray_font"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_gravity="center"
            android:tag="Orders"
            />

    </LinearLayout>


    <LinearLayout
        android:background="@color/white"
        android:id="@+id/llFooterHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivFooterHome"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"
            android:src="@drawable/footer_home"
            android:layout_gravity="center"/>

        <com.ids.qasemti.custom.CustomTextViewMedium
            android:id="@+id/tvFooterHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font_3"
            android:text="@string/Home"
            android:textColor="@color/gray_font"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_gravity="center"
            android:tag="home"
            />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/llFooterNotifications"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <!--<RelativeLayout
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size">


            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:id="@+id/tvNumberNotfUnread"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="1"
                android:textSize="5sp"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_circle"/>-->

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivFooterNotifications"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/footer_new_notification" />
            </LinearLayout>

        <LinearLayout
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.ids.qasemti.custom.CustomTextViewMedium
                android:visibility="gone"
                android:id="@+id/tvNumberNotfUnread"
                android:gravity="center"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_circle"/>
        </LinearLayout>



        </FrameLayout>

        <!--</RelativeLayout>-->

        <com.ids.qasemti.custom.CustomTextViewMedium
            android:id="@+id/tvFooterNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font_3"
            android:text="@string/notifications"
            android:textColor="@color/gray_font"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_gravity="center"
            android:tag="@string/notifications"
            />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/llFooterAccount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivFooterAccount"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"
            android:src="@drawable/footer_new_account"
            android:layout_gravity="center"/>

        <com.ids.qasemti.custom.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:id="@+id/tvFooterAccount"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font_3"
            android:text="@string/Account"
            android:textColor="@color/gray_font"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_gravity="center"
            android:tag="Account"
            />

    </LinearLayout>

    </LinearLayout>
</LinearLayout>