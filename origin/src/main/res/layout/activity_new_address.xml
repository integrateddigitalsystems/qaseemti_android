<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:id="@+id/rootLayout"

    android:layout_height="match_parent">


    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_start_end"
        android:fillViewport="true"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.ids.qasemti.custom.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_font"
                android:textColor="@color/gray_font_title"
                android:text="@string/NewAddress"
                android:layout_marginStart="@dimen/normal_margin"

                android:tag="new_address"

                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:textColor="@color/gray_font"
                android:paddingStart="@dimen/normal_margin"
                android:paddingEnd="@dimen/normal_margin"
                android:id="@+id/etAddressName"
                android:maxLines="1"
                android:layout_marginTop="@dimen/margin_start_end"
                android:hint="@string/AddressName"
                android:textColorHint="@color/gray_medium_2"
                android:tag="address_name"
                android:textSize="@dimen/normal_font"
                android:background="@drawable/rounded_white_background"
                />

            <EditText
                android:layout_width="match_parent"
                android:minHeight="@dimen/edit_text_height"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_font"
                android:layout_marginTop="@dimen/normal_margin"
                android:id="@+id/etAddressBody"
                android:hint="@string/address"
                android:paddingStart="@dimen/normal_margin"
                android:paddingEnd="@dimen/normal_margin"
                android:textColorHint="@color/gray_medium_2"
                android:tag="address"
                android:textSize="@dimen/normal_font"
                android:background="@drawable/rounded_white_background"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/normal_margin"
                android:padding="0dp"
                android:id="@+id/btMapAddress"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@color/transparent"
                android:textColor="@color/gray_font_light"
                android:tag="mark_your_address"
                android:text="@string/MarkYourAddress"
                android:textSize="@dimen/normal_font"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:textColor="@color/gray_font"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingStart="@dimen/normal_margin"
                android:paddingEnd="@dimen/normal_margin"
                android:hint="@string/Street"
                android:id="@+id/etStreet"
                android:textColorHint="@color/gray_medium_2"
                android:tag="street"
                android:textSize="@dimen/normal_font"
                android:background="@drawable/rounded_white_background"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:textColor="@color/gray_font"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingStart="@dimen/normal_margin"
                android:paddingEnd="@dimen/normal_margin"
                android:hint="@string/Building"
                android:id="@+id/etBuilding"
                android:textColorHint="@color/gray_medium_2"
                android:tag="building"
                android:textSize="@dimen/normal_font"
                android:background="@drawable/rounded_white_background"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:textColor="@color/gray_font"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingStart="@dimen/normal_margin"
                android:paddingEnd="@dimen/normal_margin"
                android:hint="@string/Floor"
                android:id="@+id/etFloor"
                android:textColorHint="@color/gray_medium_2"
                android:tag="street"
                android:textSize="@dimen/normal_font"
                android:background="@drawable/rounded_white_background"
                />









            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/msg_edit_text"
                android:textColor="@color/gray_font"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingStart="@dimen/margin_start_end"
                android:gravity="start"
                android:padding="@dimen/margin_start_end"
                android:hint="@string/MoreDetails"
                android:textColorHint="@color/gray_medium_2"
                android:tag="more_details"
                android:textSize="@dimen/normal_font"
                android:background="@drawable/rounded_white_background"
                />





            <Button
                android:layout_marginTop="@dimen/big_margin_2"
                android:layout_width="match_parent"
                android:text="@string/SaveMyAddress"
                android:textColor="@color/white"
                android:tag="save_to_my_address"
                android:layout_height="@dimen/edit_text_height"
                android:background="@drawable/blue_rounded"/>


            <Button
                android:layout_width="match_parent"
                android:text="@string/UseOnce"
                android:textColor="@color/redPrimary"
                android:tag="use_only_this_time"
                android:layout_height="@dimen/edit_text_height"
                android:background="@color/transparent"/>


        </LinearLayout>
    </ScrollView>



</LinearLayout>