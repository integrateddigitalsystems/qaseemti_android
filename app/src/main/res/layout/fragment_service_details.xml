<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/gray_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rootLayoutServiceDetails"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <include
        layout="@layout/no_logo_layout" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvPager"
        app:cardCornerRadius="@dimen/normal_radius"
        android:layout_marginTop="@dimen/medium_push"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:layout_below="@id/llToolbar"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_white_background"
        android:layout_height="@dimen/big_button_width">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.viewpager.widget.ViewPager
                android:layout_above="@id/llCostData"
                android:id="@+id/vpServiceDetails"
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_button_width" />

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/llCostData"
            android:layout_alignParentBottom="true"
            android:background="@drawable/blue_rounded_straight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height">

            <LinearLayout
                android:layout_marginStart="@dimen/normal_margin"
                android:padding="@dimen/mini_margin"
                android:background="@drawable/white_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_dollar"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                />
            </LinearLayout>


            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 KWD"
                android:textSize="@dimen/header_font"
                android:textColor="@color/white"/>


        </LinearLayout>

        </RelativeLayout>




    </androidx.cardview.widget.CardView>

    <com.google.android.material.tabs.TabLayout
        android:layout_below="@id/cvPager"
        android:layout_centerHorizontal="true"
        android:layoutDirection="ltr"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabIndicator="@null"
        android:layout_marginTop="@dimen/push_text"
        app:tabGravity="center"
        app:tabPaddingEnd="@dimen/push_text"
        app:tabPaddingStart="@dimen/push_text"
        android:id="@+id/tbMedias"/>



    <LinearLayout
        android:layout_marginTop="@dimen/big_margin"
        android:id="@+id/llSpinnerServices"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_below="@id/tbMedias"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/redPrimary"
                android:text="@string/type"
                android:textSize="@dimen/header_font"
                android:tag="type"
                />


            <RelativeLayout
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_white_background">

                <Spinner
                    android:id="@+id/spServiceType"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_35"
                    android:background="@color/transparent"
                    />

                <ImageView
                    android:layout_marginEnd="@dimen/first_margin"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/small_icon"
                    android:layout_height="@dimen/small_icon"
                    android:src="@drawable/arrow_right"
                    android:rotation="90"
                    app:tint="@color/button_blue"/>

            </RelativeLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginEnd="@dimen/normal_margin"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.ids.qasemti.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/redPrimary"
                android:text="@string/size"
                android:textSize="@dimen/header_font"
                android:tag="size"
                />


            <RelativeLayout
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_white_background">

                <Spinner
                    android:id="@+id/spServiceSize"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_35"
                    android:background="@color/transparent" />

                <ImageView
                    android:layout_marginEnd="@dimen/first_margin"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/small_icon"
                    android:layout_height="@dimen/small_icon"
                    android:src="@drawable/arrow_right"
                    android:rotation="90"
                    app:tint="@color/button_blue"/>

            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>


    <com.ids.qasemti.custom.CustomTextViewMedium
        android:id="@+id/tvDescription"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:layout_below="@id/llSpinnerServices"
        android:textSize="@dimen/header_font"
        android:textColor="@color/gray_font"
        android:text="Lorem ipsum dolor sit amet, consectetuer
adipiscing elit, sed diam nonummy nibheuismod
tincidunt ut laoreet dolore magna aliquam
eratvolutpat. Ut wisi enim ad minim veniam, quis
nostrud exerci tation ullamcorper suscipitlobortis
nisl ut aliquip ex ea commodo consequat. Duis
"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <Button
        android:id="@+id/btServiceCheckout"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:layout_below="@id/tvDescription"
        android:textColor="@color/white"
        android:text="@string/checkout"
        android:tag="checkout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:background="@drawable/blue_rounded"/>


    <LinearLayout
        android:layout_marginBottom="@dimen/big_margin"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_below="@id/btServiceCheckout"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:background="@drawable/pink_rounded"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:id="@+id/llAlert">

        <ImageView
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:src="@drawable/icon_alert"/>

        <com.ids.qasemti.custom.CustomTextViewMedium
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/normal_margin"
            android:textStyle="italic"
            android:text="@string/price_effect"/>


    </LinearLayout>

    </RelativeLayout>


    </ScrollView>



</RelativeLayout>