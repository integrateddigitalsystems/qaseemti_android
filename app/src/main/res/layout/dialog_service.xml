<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="@dimen/first_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_white_background"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.ids.qasemti.custom.CustomTextViewMedium
        android:paddingStart="@dimen/mini_margin"
        android:layout_marginStart="@dimen/mini_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColor="@color/redPrimary"/>


    <RadioGroup
        android:layout_marginTop="@dimen/first_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RadioButton
            android:padding="@dimen/small_margin"
            android:text="Purchase"
            android:textColor="@color/black"
            android:textSize="@dimen/big_font"
            android:buttonTint="@color/button_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:background="@color/transparent"
            android:padding="@dimen/small_margin"
            android:textColor="@color/black"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/huge_margin"
            android:textSize="@dimen/big_font"
            android:text="Rental"
            android:buttonTint="@color/button_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>


    <LinearLayout
        android:layout_marginStart="@dimen/mini_margin"
        android:layout_marginEnd="@dimen/mini_margin"
        android:layout_marginTop="@dimen/big_margin_2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ids.qasemti.custom.CustomTextViewMedium

            android:paddingStart="@dimen/mini_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service"
            android:textColor="@color/redPrimary"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_background_rounded">

            <Spinner
                android:id="@+id/spServices"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_35"
                android:background="@color/transparent"
                />

            <ImageView
                android:layout_marginEnd="@dimen/first_margin"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:src="@drawable/arrow_right"
                android:rotation="90"
                app:tint="@color/button_blue"/>

        </RelativeLayout>

        <com.ids.qasemti.custom.CustomTextViewMedium
            android:paddingStart="@dimen/mini_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="@color/redPrimary"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_background_rounded">

            <Spinner
                android:id="@+id/spType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_35"
                android:background="@color/transparent"
                />

            <ImageView
                android:layout_marginEnd="@dimen/first_margin"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:src="@drawable/arrow_right"
                android:rotation="90"
                app:tint="@color/button_blue"/>

        </RelativeLayout>

        <com.ids.qasemti.custom.CustomTextViewMedium
            android:paddingStart="@dimen/mini_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service / Capacity"
            android:textColor="@color/redPrimary"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_background_rounded">

            <Spinner
                android:id="@+id/spServiceCapactity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_35"
                android:background="@color/transparent"
                />

            <ImageView
                android:layout_marginEnd="@dimen/first_margin"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:src="@drawable/arrow_right"
                android:rotation="90"
                app:tint="@color/button_blue"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/big_margin_2"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Apply Filters"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/mini_margin"
                android:background="@drawable/blue_rounded"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"/>

            <Button
                android:textColor="@color/redPrimary"
                android:text="RESET"
                android:layout_marginStart="@dimen/mini_margin"
                android:background="@drawable/rounded_white_red_border"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"/>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>